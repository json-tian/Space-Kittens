<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">

    <Button
        android:id="@+id/btn_play"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="93dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/baloo"
        android:text="Classic"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_multiplay"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/baloo"
        android:text="Multiplayer"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="526dp"
        android:layout_height="163dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/geostar_fill"
        android:text="SPACE KITTENS"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/tv_coins"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_coins"
        android:layout_toEndOf="@+id/iv_coins"
        android:fontFamily="@font/baloo"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_themes"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn_play"
        android:layout_marginStart="14dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/baloo"
        android:text="THEMES"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_ad"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_themes"
        android:layout_alignTop="@+id/btn_multiplay"
        android:background="@drawable/videoad"
        android:fontFamily="@font/baloo"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_play"
        android:layout_marginEnd="74dp"
        android:layout_marginTop="-13dp"
        app:srcCompat="@drawable/sneezie" />

    <ImageView
        android:id="@+id/iv_coins"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/cat"
        android:layout_marginBottom="11dp"
        android:background="@drawable/coin" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_themes"
        android:fontFamily="@font/baloo"
        android:text="-Artwork- Celia Tian"
        android:textColor="@color/cardview_light_background" />

</RelativeLayout>